<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>academia-dbms-change</artifactId>
    <groupId>org.chokre.academia.dbms</groupId>
    <name>academia-dbms-change</name>
    <version>1.0.00.GA</version>
    <packaging>jar</packaging>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.6.RELEASE</version>
        <relativePath />
    </parent>

    <properties>
        <liquibase.diffChangeLogFile>${project.build.directory}/db.changelog-v${version.academia.version}_${change.on}.xml</liquibase.diffChangeLogFile>
        <liquibase.outputChangeLogFile>${project.build.directory}/db.changelog-v${version.academia.version}_${change.on}.xml</liquibase.outputChangeLogFile>
        <version.academia.maven.plugin.liquibase>3.5.3</version.academia.maven.plugin.liquibase>
        <maven.build.timestamp.format>EEE, MMM dd yyyy, HH:mm Z</maven.build.timestamp.format>
        <version.academia.com.oracle.jdbc>11.2.0.4</version.academia.com.oracle.jdbc>
        <implementation.vendor>${project.organization.name}</implementation.vendor>
        <specification.vendor>${project.organization.name}</specification.vendor>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <version.academia.maven.plugin.jar>2.6</version.academia.maven.plugin.jar>
        <version.academia.commons.logging>1.1.1</version.academia.commons.logging>
        <version.academia.org.liquibase>3.5.3</version.academia.org.liquibase>
        <implementation.title>${project.description}</implementation.title>
        <implementation.version>${project.version}</implementation.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <specification.title>${project.description}</specification.title>
        <specification.version>${project.version}</specification.version>
        <version.academia.snakeyaml>1.17</version.academia.snakeyaml>
        <version.academia.version>1.0.00</version.academia.version>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
        <built.by>${project.organization.name}</built.by>
        <change.on>${maven.build.timestamp}</change.on>
        <postgresql.version>42.2.5</postgresql.version>
        <built.on>${maven.build.timestamp}</built.on>
        <maven.test.skip>true</maven.test.skip>
        <academia.tag>20101010</academia.tag>
        <java.version>1.8</java.version>
        <academia.ctx>dev</academia.ctx>
        <academia.env>dev</academia.env>
    </properties>
    
    <description>Chorke Academia, Inc.</description>
    <url>https://chorke.org/docs/academia</url>
    
    <organization>
        <name>Chorke, Inc.</name>
        <url>https://chorke.org</url>
    </organization>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-core</artifactId>
                <version>${version.academia.org.liquibase}</version>
            </dependency>
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>${version.academia.commons.logging}</version>
            </dependency>
            <dependency>
                <artifactId>ojdbc6</artifactId>
                <groupId>com.oracle.jdbc</groupId>
                <version>${version.academia.com.oracle.jdbc}</version>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <groupId>com.oracle.jdbc</groupId>
                        <artifactId>xdb6</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.oracle.jdbc</groupId>
                        <artifactId>orai18n</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.oracle.jdbc</groupId>
                        <artifactId>xmlparserv2</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.oracle.jdbc</groupId>
                        <artifactId>oraclepki</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.oracle.jdbc</groupId>
                        <artifactId>osdt_cert</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.oracle.jdbc</groupId>
                        <artifactId>osdt_core</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <artifactId>h2</artifactId>
            <groupId>com.h2database</groupId>
        </dependency>
        <dependency>
            <groupId>com.oracle.jdbc</groupId>
            <artifactId>ojdbc6</artifactId>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jdbc</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
                <exclusion>
                    <artifactId>hibernate-validator</artifactId>
                    <groupId>org.hibernate</groupId>
                </exclusion>
            </exclusions>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${version.academia.maven.plugin.jar}</version>
                    <configuration>
                        <archive>
                            <manifestEntries>
                                <Specification-Title>${specification.title}</Specification-Title>
                                <Implementation-Title>${implementation.title}</Implementation-Title>
                                <Implementation-Version>${implementation.version}</Implementation-Version>
                                <Implementation-Vendor>${implementation.vendor}</Implementation-Vendor>
                                <Specification-Version>${specification.version}</Specification-Version>
                                <Specification-Vendor>${specification.vendor}</Specification-Vendor>
                                <Built-By>${built.by}</Built-By>
                                <Built-On>${built.on}</Built-On>
                                <Url>${project.url}</Url>
                            </manifestEntries>
                        </archive>
                        <excludes>
                            <exclude>**/*.md</exclude>
                            <exclude>**/*.jrxml</exclude>
                            <exclude>**/*.groovy</exclude>
                            <exclude>**/.gitkeep</exclude>
                            <exclude>**/.gitignore</exclude>
                        </excludes>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.liquibase</groupId>
                    <artifactId>liquibase-maven-plugin</artifactId>
                    <version>${version.academia.maven.plugin.liquibase}</version>
                    <configuration>
                        <propertyFileWillOverride>true</propertyFileWillOverride>
                        <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
                    </configuration>
                    <dependencies>
                        <dependency>
                            <groupId>org.yaml</groupId>
                            <artifactId>snakeyaml</artifactId>
                            <version>${version.academia.snakeyaml}</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <repositories>
        <repository>
            <id>shahed.public</id>
            <url>https://mvn.shahed.biz/m2/public</url>
            <snapshots><enabled>false</enabled><updatePolicy>never</updatePolicy></snapshots>
            <releases><enabled>true</enabled><updatePolicy>daily</updatePolicy></releases>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>log</id>
            <properties>
                <maven.build.timestamp.format>yyyyMMdd_HHmmss</maven.build.timestamp.format>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <changeSetAuthor>academia</changeSetAuthor>
                            <changeSetContext>dev,qac,uat,pro</changeSetContext>
                            <dataDir>${project.build.directory}/${change.on}</dataDir>
                            <changeLogFile>META-INF/migrations/db.changelog-master.xml</changeLogFile>
                            <propertyFile>${user.home}/.chorke/academia/etc/cfg/liquibase/dbms/${academia.env}.properties</propertyFile>
                            <diffTypes>tables,views,columns,indexes,foreignkeys,primarykeys,uniqueconstraints,data</diffTypes>
                            <contexts>${academia.ctx}</contexts>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals><goal>generateChangeLog</goal></goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>upd</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <changeLogFile>META-INF/migrations/db.changelog-master.xml</changeLogFile>
                            <propertyFile>${user.home}/.chorke/academia/etc/cfg/liquibase/dbms/${academia.env}.properties</propertyFile>
                            <contexts>${academia.ctx}</contexts>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals><goal>update</goal></goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>dif</id>
            <properties>
                <maven.build.timestamp.format>yyyyMMdd_HHmmss</maven.build.timestamp.format>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <contexts>pro</contexts>
                            <changeLogFile>META-INF/migrations/db.changelog-master.xml</changeLogFile>
                            <propertyFile>${user.home}/.chorke/academia/etc/cfg/liquibase/dbms/dif.properties</propertyFile>
                            <diffTypes>tables,views,columns,indexes,foreignkeys,primarykeys,uniqueconstraints,data</diffTypes>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals><goal>diff</goal></goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>syn</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <changeLogFile>META-INF/migrations/db.changelog-master.xml</changeLogFile>
                            <propertyFile>${user.home}/.chorke/academia/etc/cfg/liquibase/dbms/${academia.env}.properties</propertyFile>
                            <contexts>${academia.ctx}</contexts>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals><goal>changelogSync</goal></goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>rol</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <changeLogFile>META-INF/migrations/db.changelog-master.xml</changeLogFile>
                            <propertyFile>${user.home}/.chorke/academia/etc/cfg/liquibase/dbms/${academia.env}.properties</propertyFile>
                            <rollbackTag>${academia.tag}</rollbackTag>
                            <contexts>${academia.ctx}</contexts>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals><goal>rollback</goal></goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>del</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>
                            <changeLogFile>META-INF/migrations/db.changelog-master.xml</changeLogFile>
                            <propertyFile>${user.home}/.chorke/academia/etc/cfg/liquibase/dbms/${academia.env}.properties</propertyFile>
                            <contexts>${academia.ctx}</contexts>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals><goal>dropAll</goal></goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <profile>
            <id>dev</id>
            <properties>
                <academia.ctx>dev</academia.ctx>
                <academia.env>dev</academia.env>
            </properties>
        </profile>
        <profile>
            <id>qac</id>
            <properties>
                <academia.ctx>qac</academia.ctx>
                <academia.env>qac</academia.env>
            </properties>
        </profile>
        <profile>
            <id>uat</id>
            <properties>
                <academia.ctx>uat</academia.ctx>
                <academia.env>uat</academia.env>
            </properties>
        </profile>
        <profile>
            <id>pro</id>
            <properties>
                <academia.ctx>pro</academia.ctx>
                <academia.env>pro</academia.env>
            </properties>
        </profile>
    </profiles>
</project>
